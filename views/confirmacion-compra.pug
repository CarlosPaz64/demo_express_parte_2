extends layout

block content
  h1 #{title}
  h2 Â¡Compra Exitosa, #{nombre} #{apellido}!

  if carrito.length > 0
    table
      thead
        tr
          th Producto
          th Cantidad
          th Precio unitario
          th SubTotal
          th IVA
          th Precio total
      tbody
        each item in carrito
          tr
            td= item.nombre
            td= item.cantidad
            td= `\$ ${item.precio}`
            td= `\$ ${(item.precio * item.cantidad)}`
            td= "16%"
            td= `\$ ${(item.precio * item.cantidad * 1.16).toFixed(2)} (IVA incluido)`
  else
    p No hay productos en el carrito.
